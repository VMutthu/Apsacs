<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/cyan_blue"
        android:orientation="horizontal"
        android:gravity="center|right">
        <ImageView
            android:id="@+id/close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_close"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:visibility="visible">
                <RelativeLayout
                    android:id="@+id/RLCS"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/card_background"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">


                    <ImageView
                        android:id="@+id/Img_Beneficiary_List"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/icon_material_person_pin"
                        app:tint="@color/white"></ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Img_Beneficiary_List"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/nunito"
                        android:text="Clinical Service"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14sp"></TextView>



                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/RLSyphilis"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/card_background"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">


                    <ImageView
                        android:id="@+id/Img_CD"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/icon_awesome_hospital"
                        app:tint="@color/white"></ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Img_CD"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="5dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/nunito"
                        android:text="Syphilis"
                        android:textColor="@color/white"
                        android:layout_marginBottom="20dp"
                        android:textSize="14sp"></TextView>



                </RelativeLayout>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:visibility="visible">
                <RelativeLayout
                    android:id="@+id/RLHIV_Testing"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/card_background"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">


                    <ImageView
                        android:id="@+id/Img_Risk_Assesment"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/path_583"
                        app:tint="@color/white"></ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Img_Risk_Assesment"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/nunito"
                        android:text="HIV Testing"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14sp"></TextView>



                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/RLHIV_Positive"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/card_background"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">


                    <ImageView
                        android:id="@+id/Img_Screening"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/group_2564"
                        app:tint="@color/white"></ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Img_Screening"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="5dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/nunito"
                        android:text="HIV Positive"
                        android:textColor="@color/white"
                        android:layout_marginBottom="20dp"
                        android:textSize="14sp"></TextView>



                </RelativeLayout>



            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>