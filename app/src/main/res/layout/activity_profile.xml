<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileActivity">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@drawable/rounded_blue">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/icon_material_person_pin"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/TV_usernames_T"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:text="Name"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/robotoregular"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_profile"
                    android:layout_weight=".9"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight=".1">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Role"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/robotoregular"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/TV_role"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:background="@drawable/border_grey"
                        android:textColor="@color/black"
                        android:padding="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/robotoregular"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_person_b"
                    android:layout_weight=".9"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight=".1">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="User Name"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/robotoregular"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/TV_username_b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:background="@drawable/border_grey"
                        android:textColor="@color/black"
                        android:padding="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/robotoregular"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_phone"
                    android:layout_weight=".9"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight=".1">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/robotoregular"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="1">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/TV_phone_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:background="@drawable/profile_edit_e"
                            android:textColor="@color/black"
                            android:padding="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight=".3"
                            android:fontFamily="@font/robotoregular"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/mobile_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Edit  "
                            android:paddingRight="10dp"
                            android:drawableRight="@drawable/ic_edit"
                            android:background="@drawable/profile_edit_b"
                            android:textColor="@color/white"
                            android:padding="11dp"
                            android:textSize="20sp"
                            android:gravity="right"
                            android:layout_marginTop="10dp"
                            android:layout_weight=".7"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/robotoregular"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_lock"
                    android:layout_weight=".9"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight=".1">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/robotoregular"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="1">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="*********"
                            android:background="@drawable/profile_edit_e"
                            android:textColor="@color/black"
                            android:padding="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight=".3"
                            android:fontFamily="@font/robotoregular"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/pass_chg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Change "
                            android:paddingRight="10dp"
                            android:drawableRight="@drawable/ic_edit"
                            android:background="@drawable/profile_edit_b"
                            android:textColor="@color/white"
                            android:padding="11dp"
                            android:textSize="19sp"
                            android:gravity="right"
                            android:layout_marginTop="10dp"
                            android:layout_weight=".7"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/robotoregular"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>